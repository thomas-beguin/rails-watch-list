<div class="container mt-3">
  <h1>Create a bookmark</h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%#= f.association :movie %>
    <%= f.input :movie, collection: Movie.all.map { |movie| movie.title }, input_html: {multiple: false, data: {controller: "tom-select", tom_select_options_value: {tags: true}}} %>
    <%= f.submit %>
  <% end %>
</div>
